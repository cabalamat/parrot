/* pokergui.par */

window @PokerGui "Poker adviser" {

  menuBar {
      menu "File" { 
         menuItem @New "New" 
         menuItem @Open "Open..."
         menuItem @Save "Save"
      }     
      menu "Edit" { 
         menuItem @Copy "Copy"
         menuItem @Cut "Cut"
         menuItem @Paste "Paste"
      }      
      menu "Help" { 
         menuItem @About "About..."
         menuItem @GettingStarted "Getting started"
      }
   }
   
   colLayout {
   
      label @topLabel "topLabel"

      label @canvas "--- canvas will go here ---"
   
      colLayout @cardChooser {
      
         label "card chooser"
         
         table @cardChooserTable {
            tr { //----- spades -----
               td { button @card_As "As" }
               td { button @card_Ks "Ks" }

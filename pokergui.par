               td { button @card_8d "8d" }
               td { button @card_7d "7d" }
               td { button @card_6d "6d" }
               td { button @card_5d "5d" }
               td { button @card_4d "4d" }
               td { button @card_3d "3d" }
               td { button @card_2d "2d" }
            }//tr
         }//table
      
      }//@cardChooser  
      
      colLayout @probability {
         label @pWin "win probability    20%    1:4"
         label @pWincanvas "--- pWinCanvas ---"
      
      } //
      
   }//colLayout
   
}//window

/* end */